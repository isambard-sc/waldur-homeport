{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@waldur/*": ["src/*"]
    },
    "lib": ["es2021", "dom"]
  },
  "include": ["./src/**/*", "./typings.d.ts", "cypress.config.ts"],
  "exclude": ["./cypress/**/*", "./cypress.config.ts"],
  "typeRoots": ["./node_modules/@types", "./typings.d.ts"]
}
