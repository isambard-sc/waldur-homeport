{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@waldur/*": [
        "src/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ],
      "react-dom": [
        "./node_modules/@types/react-dom"
      ],
    },
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings.d.ts",
    "cypress.config.ts",
    "extractLiteralsFromFiles.ts"
  ],
  "exclude": [
    "./cypress/**/*",
    "./cypress.config.js",
    "**/*.spec.tsx",
    "**/*.fixture.tsx",
    "./src/core/testUtils.ts",
    "./src/form/testUtils.tsx",
    "./src/table/testUtils.tsx"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings.d.ts",
    "vite/client"
  ],
}