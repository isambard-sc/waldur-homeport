{
  "upload": {
    "deprecateMissing": true,
    "files": [
      {
        "type": "json",
        "group": "source",
        "pattern": "template-for-localazy.json",
        "file": "template.json",
        "features": ["filter_untranslated", "source_is_key"],
        "lang": "inherited"
      },
      {
        "group": "existing",
        "pattern": "locales/*.json",
        "type": "json",
        "features": ["filter_untranslated"],
        "file": "template.json",
        "lang": "${autodetectLang}"
      }
    ]
  },
  "download": {
    "files": "locales/${lang}.json"
  }
}
